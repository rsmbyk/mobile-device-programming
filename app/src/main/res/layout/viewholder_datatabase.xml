<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_lists_three_line_height"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="@dimen/material_lists_inner_padding" >

    <ImageView
        android:id="@+id/preview"
        android:layout_width="@dimen/material_lists_supporting_visual_medium_size"
        android:layout_height="@dimen/material_lists_supporting_visual_medium_size"
        android:layout_marginEnd="@dimen/material_lists_inner_padding"
        android:layout_marginRight="@dimen/material_lists_inner_padding"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/material_lists_text_primary"
            android:textSize="@dimen/material_lists_text_primary_size" />

        <TextView
            android:id="@+id/elapsed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="@color/material_lists_text_secondary"
            android:textSize="@dimen/material_lists_text_secondary_size" />

        <TextView
            android:id="@+id/upload_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_lists_text_secondary"
            android:textSize="@dimen/material_lists_text_secondary_size" />

    </LinearLayout>

</LinearLayout>
